<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:background="#ffffff"

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/basaks" />
            <TextView
                android:id="@+id/textTakim"
                android:text="Basaksehir Başakşehir Fatih Terim Stadyumu(+)"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textAlignment="center"
                android:layout_width="60dp"
                android:layout_marginTop="5dp"
                android:layout_height="60dp" />
            <TextView
                android:id="@+id/textTarih"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="60dp"
                android:text="Tarih:25.12.2020 Saat:19.00"
                android:textColor="#000"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textTakim1"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:text="Trabzonspor Şenol Güneş Stadyumu"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textStyle="bold" />
            <ImageView
                android:id= "@+id/imageView1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ts" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>